@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>@Localizer["SimpleSearch"]</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">@Localizer["MinDate"]</label>
                    <div class="col-lg-10">
                        <input type="date" name="initialDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">@Localizer["MaxDate"]</label>
                    <div class="col-lg-10">
                        <input type="date" name="fianlDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">@Localizer["Search"]</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>@Localizer["GroupingSearch"]</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">@Localizer["MinDate"]</label>
                    <div class="col-lg-10">
                        <input type="date" name="initialDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">@Localizer["MaxDate"]</label>
                    <div class="col-lg-10">
                        <input type="date" name="finalDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">@Localizer["Search"]</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>